<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 测试环境控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 项目包的测试日志级别 -->
    <logger name="org.apache.olingo.xmlprocessor" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Olingo框架的测试日志级别 -->
    <logger name="org.apache.olingo" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- 测试环境根日志级别 -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
