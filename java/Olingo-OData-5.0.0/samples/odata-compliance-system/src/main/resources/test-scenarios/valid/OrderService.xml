<?xml version="1.0" encoding="UTF-8"?>
<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:DataServices>
        <Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="OrderService" Alias="Order">
            <EntityContainer Name="Container">
                <EntitySet Name="Orders" EntityType="OrderService.Order"/>
            </EntityContainer>
            
            <EntityType Name="Order" HasStream="false">
                <Key>
                    <PropertyRef Name="ID"/>
                </Key>
                <Property Name="ID" Type="Edm.Int32" Nullable="false"/>
                <Property Name="CustomerID" Type="Edm.Int32"/>
                <Property Name="OrderDate" Type="Edm.DateTimeOffset"/>
                <Property Name="TotalAmount" Type="Edm.Decimal" Precision="10" Scale="2"/>
            </EntityType>
            
            <ComplexType Name="Address">
                <Property Name="Street" Type="Edm.String" MaxLength="200"/>
                <Property Name="City" Type="Edm.String" MaxLength="100"/>
                <Property Name="PostalCode" Type="Edm.String" MaxLength="20"/>
                <Property Name="Country" Type="Edm.String" MaxLength="50"/>
            </ComplexType>
            
            <Annotations Target="OrderService.Order">
                <Annotation Term="UI.DisplayName" String="Sales Order"/>
                <Annotation Term="UI.Description" String="Customer sales order information"/>
            </Annotations>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>
