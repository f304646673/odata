<?xml version="1.0" encoding="UTF-8"?>
<edmx:Edmx Version="4.0" xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx">
  <edmx:DataServices>
    <Schema Namespace="Test.XmlSpecialChars" xmlns="http://docs.oasis-open.org/odata/ns/edm">
      <!-- 包含XML特殊字符的测试 -->
      <EntityType Name="Product">
        <Key>
          <PropertyRef Name="ID"/>
        </Key>
        <Property Name="ID" Type="Edm.Int32" Nullable="false"/>
        
        <!-- 测试XML保留字符的处理 -->
        <Property Name="NameWithAmpersand" Type="Edm.String" DefaultValue="Johnson &amp; Johnson"/>
        <Property Name="NameWithLessThan" Type="Edm.String" DefaultValue="Price &lt; 100"/>
        <Property Name="NameWithGreaterThan" Type="Edm.String" DefaultValue="Quality &gt; Average"/>
        <Property Name="NameWithQuotes" Type="Edm.String" DefaultValue="Product &quot;Premium&quot; Edition"/>
        <Property Name="NameWithApostrophe" Type="Edm.String" DefaultValue="Customer&apos;s Choice"/>
        
        <!-- 测试CDATA节的处理 -->
        <Property Name="HtmlDescription" Type="Edm.String" DefaultValue="&lt;![CDATA[&lt;p&gt;This is &lt;b&gt;bold&lt;/b&gt; text&lt;/p&gt;]]&gt;"/>
        
        <!-- 测试混合的特殊字符 -->
        <Property Name="ComplexString" Type="Edm.String" DefaultValue="A &amp; B &lt; C &gt; D &quot;quoted&quot; &apos;apostrophe&apos;"/>
      </EntityType>
      
      <!-- 在注释中测试特殊字符 -->
      <!-- 这是包含特殊字符的注释: &amp; &lt; &gt; &quot; &apos; -->
      <ComplexType Name="Address">
        <Property Name="Street" Type="Edm.String"/>
        <!-- Street可能包含 & 符号，如 "Main & Broadway" -->
        <Property Name="Description" Type="Edm.String"/>
        <!-- Description可能包含 < > 符号，如 "Building < 10 stories" -->
      </ComplexType>
    </Schema>
  </edmx:DataServices>
</edmx:Edmx>
