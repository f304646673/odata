<?xml version="1.0" encoding="UTF-8"?>
<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:DataServices>
        <Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="ConflictNamespace">
            <EntityType Name="Staff">
                <Key>
                    <PropertyRef Name="ID"/>
                </Key>
                <Property Name="ID" Type="Edm.Int32" Nullable="false"/>
                <Property Name="FullName" Type="Edm.String" MaxLength="100"/>
                <Property Name="Position" Type="Edm.String" MaxLength="50"/>
            </EntityType>
            
            <Action Name="PromoteEmployee" IsBound="false">
                <Parameter Name="employeeId" Type="Edm.Int32"/>
                <Parameter Name="newPosition" Type="Edm.String"/>
                <Parameter Name="salary" Type="Edm.Decimal"/>
            </Action>
            
            <EntityContainer Name="Container2">
                <EntitySet Name="Staff" EntityType="ConflictNamespace.Staff"/>
            </EntityContainer>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>
