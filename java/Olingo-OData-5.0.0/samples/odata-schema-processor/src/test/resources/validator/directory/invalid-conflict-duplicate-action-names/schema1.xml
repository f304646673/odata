<?xml version="1.0" encoding="UTF-8"?>
<edmx:Edmx xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx" Version="4.0">
    <edmx:DataServices>
        <Schema xmlns="http://docs.oasis-open.org/odata/ns/edm" Namespace="ConflictNamespace">
            <EntityType Name="Employee">
                <Key>
                    <PropertyRef Name="ID"/>
                </Key>
                <Property Name="ID" Type="Edm.Int32" Nullable="false"/>
                <Property Name="Name" Type="Edm.String" MaxLength="100"/>
                <Property Name="Department" Type="Edm.String" MaxLength="50"/>
            </EntityType>
            
            <Action Name="PromoteEmployee" IsBound="false">
                <Parameter Name="staffId" Type="Edm.Int32"/>
                <Parameter Name="newDepartment" Type="Edm.String"/>
                <Parameter Name="effectiveDate" Type="Edm.DateTimeOffset"/>
            </Action>
            
            <EntityContainer Name="Container1">
                <EntitySet Name="Employees" EntityType="ConflictNamespace.Employee"/>
            </EntityContainer>
        </Schema>
    </edmx:DataServices>
</edmx:Edmx>
