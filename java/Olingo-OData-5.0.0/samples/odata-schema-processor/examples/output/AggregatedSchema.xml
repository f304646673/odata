<?xml version="1.0" encoding="UTF-8"?>
<edmx:Edmx Version="4.0" xmlns:edmx="http://docs.oasis-open.org/odata/ns/edmx">
  <edmx:DataServices>
    <Schema Namespace="Common.Products">
      <EntityType Name="Product" BaseType="Core.Types.BaseEntity">
        <Property Name="Name" Type="Edm.String" Nullable="false" MaxLength="100"/>
        <Property Name="Price" Type="Edm.Decimal" Nullable="false"/>
      </EntityType>
    </Schema>
    <Schema Namespace="Business.Entities">
      <EntityType Name="Customer" BaseType="Core.Types.BaseEntity">
        <Property Name="Name" Type="Edm.String" Nullable="false" MaxLength="100"/>
        <Property Name="CustomerCode" Type="Edm.String" Nullable="false" MaxLength="20"/>
      </EntityType>
      <EntityType Name="Order" BaseType="Core.Types.BaseEntity">
        <Property Name="OrderNumber" Type="Edm.String" Nullable="false" MaxLength="50"/>
        <Property Name="TotalAmount" Type="Edm.Decimal" Nullable="false"/>
      </EntityType>
    </Schema>
    <Schema Namespace="Core.Types">
      <EntityType Name="BaseEntity">
        <Property Name="Id" Type="Edm.Guid" Nullable="false"/>
        <Property Name="CreatedAt" Type="Edm.DateTimeOffset" Nullable="false"/>
        <Property Name="UpdatedAt" Type="Edm.DateTimeOffset"/>
      </EntityType>
      <ComplexType Name="Address">
        <Property Name="Street" Type="Edm.String" MaxLength="100"/>
        <Property Name="City" Type="Edm.String" MaxLength="50"/>
        <Property Name="Country" Type="Edm.String" MaxLength="50"/>
        <Property Name="PostalCode" Type="Edm.String" MaxLength="20"/>
      </ComplexType>
    </Schema>
  </edmx:DataServices>
</edmx:Edmx>